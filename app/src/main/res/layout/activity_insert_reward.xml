<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    tools:context=".Organizer.menu5_update_reward.Activity.InsertRewardActivity">

    <RelativeLayout
        android:id="@+id/title1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="รายละเอียดการจัดส่งรางวัล"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="16dp"
            android:fontFamily="@font/opunmairegular">
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* โปรดตรวจสอบความถูกให้เรียบร้อย"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/opunmairegular">
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/title3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title2">
        <TextView
            android:id="@+id/text_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/opunmairegular"
            android:textColor="#000000"
            android:text="ลำดับ :  ">
        </TextView>
        <TextView
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="30dp"
            android:text="id                "
            android:fontFamily="@font/opunmairegular"
            android:layout_toRightOf="@id/text_id">
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/title4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/title3">
        <TextView
            android:id="@+id/text_name_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ชื่องาน :"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="50dp"
            android:textColor="#000000"
            android:fontFamily="@font/opunmairegular">
        </TextView>
        <TextView
            android:id="@+id/event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="event"
            android:fontFamily="@font/opunmairegular"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/text_name_event">
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/title5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title4"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="ชื่อ   :"
            android:textColor="#000000"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/opunmairegular">
        </TextView>
        <RelativeLayout
            android:layout_toRightOf="@id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp">
            <TextView
                android:id="@+id/Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/opunmairegular"
                android:textColor="#000000"
                android:layout_marginLeft="5dp"
                android:text="Name">
            </TextView>

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/title6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title5"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/text_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ที่อยู่  :"
            android:layout_marginLeft="50dp"
            android:textColor="#000000"
            android:fontFamily="@font/opunmairegular">
        </TextView>
        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="address"
            android:layout_toRightOf="@id/text_address"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:fontFamily="@font/opunmairegular">
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/title7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title6"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/text_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="รูปแบบการจัดส่ง :"
            android:layout_marginLeft="50dp"
            android:textColor="#000000"
            android:fontFamily="@font/opunmairegular">
        </TextView>
        <EditText
            android:id="@+id/send"
            android:layout_width="190dp"
            android:layout_height="30dp"
            android:background="@drawable/round_white"
            android:textColor="#000000"
            android:hint=" ตัวอย่าง : ไปรษณีย์ไทย, kerry, อื่นๆ"
            android:textSize="12dp"
            android:fontFamily="@font/opunmairegular"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/text_distance">
        </EditText>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/title8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/title7">
        <TextView
            android:id="@+id/text_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="เลขพัสดุ :"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="50dp"
            android:textColor="#000000"
            android:fontFamily="@font/opunmairegular">
        </TextView>
        <EditText
            android:id="@+id/num_order"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="@drawable/round_white"
            android:fontFamily="@font/opunmairegular"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/text_type">
        </EditText>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="40dp"
        android:text="อนุมัติ"
        android:background="@drawable/round_green"
        android:layout_below="@id/title8"
        android:onClick="showAlertDialog">
    </Button>
</RelativeLayout>