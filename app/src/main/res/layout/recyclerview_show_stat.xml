<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".User.menu2_profile_event.Adapter.ShowStatUserAdapter">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_select_payment_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#FFFF"
        app:cardCornerRadius="7dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_run"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp">
            </ImageView>
            <TextView
                android:id="@+id/kg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/image1"
                android:textColor="#000000"
                android:textSize="20dp"
                android:text="0">
            </TextView>
            <TextView
                android:id="@+id/title_kg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_toRightOf="@+id/kg"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:text="KM"
                android:layout_centerInParent="true">
            </TextView>
            <TextView
                android:id="@+id/cal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:layout_toRightOf="@+id/title_kg"
                android:layout_marginLeft="10dp"
                android:layout_centerInParent="true">
            </TextView>
            <TextView
                android:id="@+id/title_cal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="calorie"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:layout_toRightOf="@+id/cal"
                android:layout_marginLeft="5dp"
                android:layout_centerInParent="true">
            </TextView>
            <TextView
                android:id="@+id/pace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:layout_toRightOf="@+id/title_cal"
                android:layout_marginLeft="10dp"
                android:layout_centerInParent="true">
            </TextView>
            <TextView
                android:id="@+id/title_pace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pace"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:layout_toRightOf="@+id/pace"
                android:layout_marginLeft="5dp"
                android:layout_centerInParent="true">
            </TextView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>