<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/color_bg"
    tools:context=".Organizer.menu3_check_payment.Adapter.Select_user_paymentAdapter">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:id="@+id/user1"
            android:layout_width="125dp"
            android:layout_height="140dp">
            <ImageView
                android:id="@+id/pic_user1"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/person">
            </ImageView>
            <TextView
                android:id="@+id/id_user1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pic_user1"
                android:layout_marginLeft="10dp"
                android:text="ID :">
            </TextView>
            <TextView
                android:id="@+id/text_id_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pic_user1"
                android:layout_toRightOf="@id/id_user1"
                android:layout_marginLeft="5dp"
                android:text="0">
            </TextView>
            <TextView
                android:id="@+id/FName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_user1"
                android:layout_marginLeft="10dp"
                android:text="name">
            </TextView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>