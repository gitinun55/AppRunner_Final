<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    tools:context=".User.menu2_profile_event.Activity.ShowDistanceEventActivity">

    <RelativeLayout
        android:id="@+id/title_NameEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/Name_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opunmairegular"
            android:text="งานวิ่งที่คุณเลือก"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold">
        </TextView>
        <TextView
            android:id="@+id/text_name_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name_event"
            android:textSize="16dp"
            android:layout_below="@id/Name_event"
            android:textColor="#000000"
            android:fontFamily="@font/opunmairegular">
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/title_stat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_NameEvent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opunmairegular"
            android:text="สถิติวิ่งของคุณที่ทำได้"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold">
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/stat_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_stat"
        android:layout_margin="5dp"
        android:background="@drawable/round_white">
        <RelativeLayout
            android:id="@+id/title_kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ระยะทางที่วิ่งไปทั้งหมด"
                android:textSize="14dp"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/opunmairegular">
            </TextView>
            <TextView
                android:id="@+id/Km_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title1"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:text="0">
            </TextView>
            <TextView
                android:id="@+id/title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title1"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_toRightOf ="@id/Km_user"
                android:layout_marginLeft="5dp"
                android:text="/">
            </TextView>
            <TextView
                android:id="@+id/kg_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title1"
                android:layout_toRightOf="@id/title3"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginLeft="5dp"
                android:text="0">
            </TextView>
            <TextView
                android:id="@+id/title4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title1"
                android:layout_toRightOf="@id/kg_event"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginLeft="5dp"
                android:text="KM">
            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/title_cal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/title_kg">
            <TextView
                android:id="@+id/title5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="แคลอรี่ทั้งหมด"
                android:textSize="14dp"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/opunmairegular">
            </TextView>
            <TextView
                android:id="@+id/cal_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title5"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:text="0">
            </TextView>
            <TextView
                android:id="@+id/title6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title5"
                android:layout_toRightOf="@id/cal_user"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginLeft="5dp"
                android:text="calorie">
            </TextView>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/title9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/stat_user">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="สถิติวิ่งที่ทำการอัปโหลด"
            android:textStyle="bold"
            android:fontFamily="@font/opunmairegular"
            android:textColor="#000000"
            android:layout_marginLeft="10dp">
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/title10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title9">
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/refreshlayout_detail_stat"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_stat_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical" />
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </RelativeLayout>

</RelativeLayout>