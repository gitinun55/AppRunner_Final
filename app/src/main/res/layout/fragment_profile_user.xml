<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    tools:context=".User.menu6_profile_user.Fragment.ProfileUserFragment">

    <RelativeLayout
        android:id="@+id/edtname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/Edtprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="ประวัติส่วนตัว"
            android:fontFamily="@font/opunmairegular" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/detailsEdt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtname"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">
        <RelativeLayout
            android:id="@+id/FName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/text_fname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ชื่อ                   :"
                android:textSize="18dp"
                android:textColor="#000000"
                android:fontFamily="@font/opunmairegular">
            </TextView>
            <TextView
                android:id="@+id/FName_text"
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/text_fname"
                android:hint="   Name"
                android:textSize="15dp"
                android:layout_marginTop="5dp">
            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/LName"
            android:layout_below="@id/FName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/text_lname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="นามสกุล          :"
                android:textSize="18dp"
                android:textColor="#000000"
                android:fontFamily="@font/opunmairegular">
            </TextView>
            <TextView
                android:id="@+id/LName_text"
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/text_lname"
                android:hint="   Name"
                android:textSize="15dp"
                android:layout_marginTop="5dp">
            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/LName"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/text_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เบอร์โทรศัพท์  :"
                android:textSize="18dp"
                android:textColor="#000000"
                android:fontFamily="@font/opunmairegular">
            </TextView>
            <TextView
                android:id="@+id/tel_text"
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/text_tel"
                android:textSize="15dp"></TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/idcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Tel"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/text_idcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เลขบัตรประชาชน  :"
                android:textSize="18dp"
                android:textColor="#000000"
                android:fontFamily="@font/opunmairegular">
            </TextView>
            <TextView
                android:id="@+id/tv_id"
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:textSize="15dp"
                android:layout_toRightOf="@id/text_idcard"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp">
            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/text_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idcard">
            <TextView
                android:id="@+id/Gender"
                android:text="เพศ              :"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opunmairegular">
            </TextView>
            <TextView
                android:id="@+id/tv_gender"
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:textSize="15dp"
                android:layout_toRightOf="@id/Gender"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp">
            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_gender">
            <TextView
                android:id="@+id/bd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:text="วันเกิด          :"
                android:textColor="#000000"
                android:textSize="18sp"
                android:fontFamily="@font/opunmairegular"/>
            <TextView
                android:id="@+id/tv_bd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="23dp"
                android:layout_toRightOf="@+id/bd"
                android:textSize="15sp" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detailsEdt"
        android:layout_marginTop="40dp">
        <Button
            android:id="@+id/btn_edit_profile"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/round_green"
            android:text="แก้ไขข้อมูล"
            android:textSize="20sp" />
    </RelativeLayout>

</RelativeLayout>