<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Organizer.menu2_profile_event.Activity.DetailEventOrganizerActivity"
    android:background="@color/color_bg">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_event_name_organizer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_margin="30dp"
            android:background="@drawable/round_white"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:textSize="25dp"
            android:text="name event">
        </TextView>

        <ImageView
            android:id="@+id/imageView_organizer"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/tv_event_name_organizer"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_image"
            android:scaleType="centerCrop" />

            <RelativeLayout
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_white"
                android:layout_margin="10dp"
                android:layout_below="@+id/imageView_organizer">
                    <TableLayout
                        android:id="@+id/table"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">
                        <TableRow>
                            <TextView
                                android:id="@+id/date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="วันที่จัดกิจกรรม :"
                                android:layout_marginLeft="20dp"
                                android:textStyle="bold"
                                android:fontFamily="@font/opunmairegular"
                                android:textColor="#000000">
                            </TextView>
                            <TextView
                                android:id="@+id/tv_date_start_organizer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="  date_start"
                                android:fontFamily="@font/opunmairegular"
                                android:textColor="#000000"
                                android:layout_marginLeft="10dp">
                            </TextView>
                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text=" - "
                                android:fontFamily="@font/opunmairegular"
                                android:textColor="#000000">
                            </TextView>
                            <TextView
                                android:id="@+id/tv_date_end_organizer"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="date_end"
                                android:fontFamily="@font/opunmairegular"
                                android:textColor="#000000">
                            </TextView>
                        </TableRow>
                    </TableLayout>

                    <TextView
                        android:id="@+id/tv_detail_organizer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/table"
                        android:layout_marginTop="5dp"
                        android:text="detail_event"
                        android:textSize="12dp"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/opunmairegular"
                        android:textColor="#000000">
                    </TextView>

                    <TextView
                        android:id="@+id/text_detail_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="     ***เหตุผลที่ไม่อนุมัติงานวิ่ง :"
                        android:textStyle="bold"
                        android:fontFamily="@font/opunmairegular"
                        android:layout_marginLeft="20dp"
                        android:textColor="#000000"
                        android:layout_margin="5dp"
                        android:layout_below="@id/tv_detail_organizer">
                    </TextView>

                    <TextView
                        android:id="@+id/tv_detail_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/text_detail_cancel"
                        android:layout_below="@id/tv_detail_organizer"
                        android:fontFamily="@font/opunmairegular"
                        android:text=""
                        android:layout_marginTop="5dp"
                        android:textColor="#000000"
                        android:textSize="12dp">
                    </TextView>
            </RelativeLayout>

        <Button
            android:id="@+id/btn_list_name"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_blue"
            android:text="รายชื่อนักวิ่ง"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/title"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

</ScrollView>