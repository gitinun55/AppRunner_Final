<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:fillViewport="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".DetailEventUserActivity">
        <TextView
            android:id="@+id/tv_event_name_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:fontFamily="@font/opunmairegular"
            android:textColor="#000000"
            android:text="name event">
        </TextView>

        <RelativeLayout
            android:id="@+id/title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_event_name_user">
            <ImageView
                android:id="@+id/imageView_user"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:layout_margin="5dp"
                android:background="@drawable/ic_image"
                android:scaleType="centerCrop" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title1"
            android:layout_margin="10dp"
            android:background="@drawable/round_white">
            <TableLayout
                android:id="@+id/table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <TableRow>
                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="วันที่จัดกิจกรรม :"
                        android:fontFamily="@font/opunmairegular"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginLeft="16dp">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_date_start_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:text="  date_start">
                    </TextView>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text=" - ">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_date_end_user"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="date_end"
                        android:textColor="#000000">
                    </TextView>
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="จำนวนที่เปิดสมัครทั้งหมด  "
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_below="@+id/table"
                android:fontFamily="@font/opunmairegular"
                android:textColor="#000000"
                android:layout_marginLeft="16dp">
            </TextView>
            <TextView
                android:id="@+id/num_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/text1"
                android:text="0"
                android:textSize="12dp"
                android:textColor="#000000"
                android:fontFamily="@font/opunmairegular"
                android:layout_below="@+id/table">
            </TextView>

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/refreshlayout_user"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/text1">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical" />
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

            <TextView
                android:id="@+id/tv_detail_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="detail_event"
                android:fontFamily="@font/opunmairegular"
                android:textColor="#000000"
                android:layout_below="@+id/refreshlayout_user"
                android:layout_marginLeft="16dp">
            </TextView>
        </RelativeLayout>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_blue"
            android:text="สมัครงาน"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/title2"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/opunmairegular"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/btn_register">
        </RelativeLayout>

    </RelativeLayout>
</ScrollView>